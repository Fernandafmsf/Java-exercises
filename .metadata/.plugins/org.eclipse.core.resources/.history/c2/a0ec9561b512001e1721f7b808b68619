package treinando;

public class Pessoa {
	private int idade;
	private int anoNascimento;
	private String nome;
	
	public int calculaIdade() {
		this.idade= 2023-this.anoNascimento;
		return idade;	
	}
	
	public int informaIdade() {
		return idade;
	}
	
	public String informaNome() {
		return this.nome;
	}
	
	public void ajudaAnoNascimento(int ano) {
		this.anoNascimento=ano;
	}
}

